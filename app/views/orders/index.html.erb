<div class="row" id="order_page">
  <% @orders.each do |order| %>
    <div class="col-xs-2 col-sm-2 col-md-4">
      <h3>
        Order # <%= order.id %>:
        <%= link_to order.product.name, order %>
      </h3>
      <p><%= order.product.description %></p>
      <strong>$ <%= order.product.price %></strong>
    </div><!-- /col -->
  <% end %>
</div>
