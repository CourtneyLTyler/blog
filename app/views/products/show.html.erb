<div class="show_page">
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

  <div class="thumbnail">
    <%= image_tag(@product.image_url, class: "img-responsive") %>
  </div>

<p>
  <strong>Color:</strong>
  <%= @product.color %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>


  <%= render 'new_comment' %>

<p>
  Average Rating:
  <div class="rated" data-score="<%= @product.average_rating %>"></div>
</p>

<p>
  <strong>Top Review:</strong>
  <%= @product.highest_rating_comment %>
</p>

<p>
  <strong>Low Review:</strong>
  <%= @product.lowest_rating_comment %>
</p>

<%= render 'comments' %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</div>
