
<div class="container" id="contact_page">
  <h1>Contact Court</h1>
  <h2 class="info">reach me via unicourtfurnishings@gmail.com</h2>
  

  <%= flash[:notice] %>

  <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
  <div class="row form">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= form.label :message %>
      <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
    </div>
  </div>
  <%= form.submit "Send", class: "form_label submit" %>
  <% end %>


</div><!--contact_page-->
